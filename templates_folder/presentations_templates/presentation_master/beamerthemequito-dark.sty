\definecolor{MyOrange}{RGB}{255,80,30}
\definecolor{MyRed}{RGB}{200,0,0}
\definecolor{yale_blue}{HTML}{00356b}
% This is a four-color theme
\definecolor{ColorOne}{named}{yale_blue} 		% Titles, highligths, 
\definecolor{ColorTwo}{named}{MyOrange} 	% Alerts
\definecolor{ColorThree}{named}{MyGray} 	% Equations, definitions, higlights
\definecolor{ColorFour}{named}{yellow}		% Bibliography

